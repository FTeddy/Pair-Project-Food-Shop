<html>
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" type="text/css" href="/styles/css.css">
  <title><%= title %></title>
</head>

<body>
  <%- include('./partial/navigation.ejs', {isLogin:isLogin}) %>
  <div class="main">
    <div class="content">
      <h1><%= header %></h1>

      <% if (err) { %>
        <h4 style="color:red"><%= err.message %><h4>
      <% } %>

      <% if (isLogin === false) { %>
        <a href="/login">
          <button type="button" name="button">
            Login
          </button>
        </a>
      <% } else { %>
        <h1>Welcome, <%= user %></h1>
      <% } %>



    </div>
  </div>

</body>
</html>
