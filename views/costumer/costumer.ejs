<html>
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" type="text/css" href="/styles/css.css">
  <title><%= title %></title>
</head>

<body>
  <%- include('../partial/navigation.ejs', {isLogin:isLogin}) %>
  <div class="main">
    <div class="content">
      <h1><%= header %></h1>
      <a href="costumer/add">
        <button type="button" name="button">
          Register new account
        </button>
      </a>
      <table>
        <tr>
          <td>No</td>
          <td>ID</td>
          <td>Username</td>
          <td>Invoice IDs</td>
          <% if (isLogin === true) { %>
            <td>Actions</td>
          <% } %>

        </tr>

          <% for (var i = 0; i < foundCostumers.length; i++) { %>
            <tr>
              <td><%= i+1 %></td>
              <td><%= foundCostumers[i].id %></td>
              <td><%= foundCostumers[i].userName %></td>
              <td>
                <% if (foundCostumers[i].Invoices.length === 0) { %>
                  No Invoices
                <% } %>
                <ol>

                  <% for (let j = 0; j < foundCostumers[i].Invoices.length; j++) { %>
                    <li>

                      <a href="/costumer/<%= foundCostumers[i].id %>/Invoice/<%= foundCostumers[i].Invoices[j].id %>">
                        <button type="button" name="button" >
                          View INV : <%= foundCostumers[i].Invoices[j].id %>
                        </button>
                      </a>
                    </li>

                  <% } %>
                </ol>

              </td>
              <% if (isLogin === true) { %>
                <td>
                  <a href="/costumer/edit/<%= foundCostumers[i].id %>">
                    <button type="button" name="button" >
                      edit
                    </button>
                  </a>
                  /
                  <a href="/costumer/delete/<%= foundCostumers[i].id   %>" >
                    <button type="button" name="button" onclick="deleteConfirm()">
                      delete
                    </button>
                  </a>
                </td>
              <% } %>
            </tr>
          <% } %>


      </table>

      <table>
        Frequent Costumers!
        <tr>
          <th>id</th>
          <th>name</th>
          <th>number of orders</th>
        </tr>
        <% for (var i = 0; i < frequent.length; i++) { %>
          <tr>
            <td><%= frequent[i].id %></td>
            <td><%= frequent[i].userName %></td>
            <td><%= frequent[i].sumInvoices() %></td>
          </tr>
        <% } %>
      </table>

    </div>
  </div>

</body>
</html>
