<html>
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" type="text/css" href="/styles/css.css">
  <title><%= title %></title>
</head>

<body>
  <%- include('../partial/navigation.ejs', {isLogin:isLogin}) %>
  <div class="main">
    <div class="content">
      <h1><%= header %></h1>

      <div class="form">
        <% if (err) { %>
          <h4 style="color:red"><%= err.message %><h4>
        <% } %>
        <form action="/costumer/edit/<%= costumerId %>" method="post">
          New Username:<br>
          <input type="text" name="userName" value="<%= foundCostumer.userName %>"><br>
          <br>
          New Password:<br>
          <input type="password" name="password" value="<%= foundCostumer.password %>"><br>
          <br>
          <input type="submit" value="Submit">
        </form>
      </div>

    </div>
  </div>

</body>
</html>
